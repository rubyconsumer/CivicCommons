<div class="wrapper">
  <div class="content-container">

    <div class="main-content">
      <%= render :partial => '/actions/action', :collection => @actions %>
    </div><!-- /.main-content -->

    <div class="aside supplementary">
        <div class="mod">
          <div class="btn-group">
            <a class="button dropdown-toggle full" href="#">
              <span class="fl-left">Suggest an Action</span>
              <span class="caret fl-right"></span>
            </a>
            <ul class="dropdown-menu full">
              <li><%= link_to 'Take a Vote',new_conversation_vote_path(@conversation, :anchor => 'opportunity-nav') %></li>
              <li class="divider"></li>
              <li><%= link_to 'Write a Petition', new_conversation_petition_path(@conversation, :anchor => 'opportunity-nav') %></li>
            </ul>
          </div>
        </div>

      <% if @conversation.issues.standard_issue.size > 0 %>
        <%= render :partial => '/conversations/side_issues', :object => @conversation, :as => :conversation %>
      <% end %>
      <%= render :partial => '/shared/opportunity/side_participants', :locals => {participants: @participants} %>
  </div>
</div>

