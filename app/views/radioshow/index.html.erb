        <%- @radioshows.each do |radioshow| %>
          <%= render partial: 'radioshow_panel', locals: {radioshow: radioshow} %>
        <%- end %>
        <%= will_paginate @radioshows, :inner_window => 3, :previous_label => "Previous", :next_label => "Next" %>
      </div>

      <div class="aside supplementary">
